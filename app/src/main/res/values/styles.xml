<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>

    <!-- 상태바 배경색-->
        <item name="android:statusBarColor">#fff</item>//상단 상태바(시간 보이는 곳) 흰색으로 변경
    <!-- 상태바 배경 글자색-->
        <item name="android:windowLightStatusBar">true</item> //상태바 폰트 색 흰색으로 변경. 해당 기능은 api23부터 추가됨.
<!--      타이틀 바 글자 색 변경  -->
        <item name="titleTextColor">@color/PrimaryColor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="height">50dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 상태바 배경색-->
        <item name="android:statusBarColor">#fff</item>//상단 상태바(시간 보이는 곳) 흰색으로 변경
        <!-- 상태바 배경 글자색-->
        <item name="android:windowLightStatusBar">true</item> //상태바 폰트 색 흰색으로 변경. 해당 기능은 api23부터 추가됨.
        <!--      타이틀 바 글자 색 변경  -->
        <item name="titleTextColor">@color/PrimaryColor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="height">50dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">

        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
