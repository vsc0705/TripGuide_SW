<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle_orange"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Receiver MSG"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_message_time_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="timestamp_receiver"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_receiver"
        app:layout_constraintLeft_toRightOf="@+id/text_message_receiver"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/messageImageVreceiver"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:riv_border_width="0.5dip"
        app:riv_corner_radius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/image_message_time_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="timestamp_image_receiver"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageImageVreceiver"
        app:layout_constraintLeft_toRightOf="@+id/messageImageVreceiver"
        />



    <TextView
        android:id="@+id/text_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle_green"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Sender MSG"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        android:text="timestamp_sender"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_send"
        app:layout_constraintRight_toLeftOf="@+id/text_message_send"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/messageImageVsender"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:riv_border_width="0.5dip"
        app:riv_corner_radius="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/image_message_time_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        android:text="timestamp_sender"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageImageVsender"
        app:layout_constraintRight_toLeftOf="@+id/messageImageVsender"
        />


</androidx.constraintlayout.widget.ConstraintLayout>