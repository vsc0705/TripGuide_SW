<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="20sp"
            >

        </LinearLayout>

    </LinearLayout> //언어 설정

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp">


    </LinearLayout>  //키워드 파트

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변이 가능한 기간을 설정해주세요."
            android:layout_marginRight="20dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <!--            <LinearLayout-->
            <!--                android:layout_width="400dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal">-->

            <!--                <Button-->
            <!--                    android:id="@+id/btn_start"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:background="@drawable/selection_btn"-->
            <!--                    >-->



            <!--                </Button>-->

            <!--                <Button-->
            <!--                    android:id="@+id/btn_end"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="종료날" />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:gravity="left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:text="시작일">

                    </TextView>
                    <LinearLayout
                        android:id="@+id/Ll_start"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/layout_border_black"
                        android:layout_gravity="left"
                        android:layout_marginLeft="13dp"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/textView_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:text="종료일"/>

                    <LinearLayout
                        android:id="@+id/Ll_end"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/layout_border_black"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_marginLeft="13dp">

                        <TextView
                            android:id="@+id/textView_enddate"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>  //기간 설정 파트

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다른 정보를 변경하려면 setting으로 가주세요"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginBottom="20dp">
    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_gravity="center"
        android:textColor="@color/PrimaryColor"
        android:textSize="20dp"
        android:background="@drawable/selection_btn"
        ></Button>
    </LinearLayout> //확인 버튼
</LinearLayout>

</ScrollView>