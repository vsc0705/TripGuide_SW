<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_title"
            android:gravity="center"
            android:text="Evaluation(평가)"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="30sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_title"
            android:text="How about Accuracy?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_star_title"
            android:layout_marginLeft="30sp">

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_star_title"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_accuracyStar"
            android:layout_marginLeft="10sp">
            
        </RatingBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_accuracyStar"
            android:text="How about Speed?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_secondstar_title"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp">

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_secondstar_title"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_speedStar"
            android:layout_marginLeft="10sp">

        </RatingBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_speedStar"
            android:text="How about Kindness?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_thirdstar_title"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp"
            >

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_thirdstar_title"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_kindStar"
            android:layout_marginLeft="10sp">

        </RatingBar>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="30sp"
            android:id="@+id/evaluation_etc"
            android:layout_below="@+id/evaluation_kindStar"
            android:text="write your opinion"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginBottom="15sp"></TextView>
        
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="4"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:layout_below="@id/evaluation_etc"
            android:minWidth="200sp"
            android:hint="write your opinion"
            android:id="@+id/evaluation_opinion">

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="submit"
            android:layout_below="@id/evaluation_opinion"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/evaluation_submit"></Button>


    </RelativeLayout>


</ScrollView>