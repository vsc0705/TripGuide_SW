<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your type"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"></TextView>

        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/selection_questioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="124dp"
            android:padding="30dp"
            android:text="Questioner"
            android:textSize="30dp"
            android:textColor="@android:color/white"
             />




        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/selection_respondent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:padding="20dp"
            android:text="Respondent"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            app:buttonColor="@color/background_color_red"
            app:unpressedGlowSize="0dp"
            app:pressedGlowSize="25dp"
            app:glowColor="@color/glow_color_red"
            app:cornerRadius="50dp"

            />


    </LinearLayout>
</LinearLayout>