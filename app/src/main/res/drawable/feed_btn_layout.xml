<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="@android:color/white" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="10sp"
        android:left="10sp"
        android:right="10sp"
        android:top="10sp" />

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="2sp"
        android:color="@android:color/black" />
    <corners
        android:radius="25sp">
    </corners>

</shape>